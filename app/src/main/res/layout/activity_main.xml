<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextViuw01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="KAMUS"
        android:textStyle="bold"
        android:textSize="26dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViuw02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INDONESIA-LAIMU"
        android:layout_below="@+id/TextViuw01"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/ImageViuw01"
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        android:layout_below="@id/TextViuw02"
        android:scaleType="centerInside"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/TextViuw03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DISUSUN OLEH :"
        android:layout_below="@+id/ImageViuw01"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TextViuw04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FAJAR WATI TOYO (190101041)"
        android:layout_below="@+id/TextViuw03"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/translateButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/TextViuw04"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:text="TERJEMAHAN"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/translateButton"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="KELUAR" />
</RelativeLayout>